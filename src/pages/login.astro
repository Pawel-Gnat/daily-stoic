---
import Layout from "@/layouts/Layout.astro";
import { AuthCard } from "@/components/auth/AuthCard";
import { LoginForm } from "@/components/auth/LoginForm";
---

<Layout title="Login - Daily Stoic">
  <main class="container min-h-screen flex items-center justify-center">
    <div class="w-full max-w-lg mx-auto p-4">
      <div class="flex flex-col items-center space-y-6 text-center">
        <!-- Logo -->
        <div class="mb-4">
          <h1 class="text-3xl font-bold">Daily Stoic</h1>
          <p class="text-muted-foreground">Sign in to your account</p>
        </div>

        <AuthCard title="Welcome back" description="Enter your email to sign in to your account" client:load>
          <LoginForm client:load />
        </AuthCard>
      </div>
    </div>
  </main>
</Layout>
