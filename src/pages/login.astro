---
import Layout from "@/layouts/Layout.astro";
import { AuthCard } from "@/components/views/auth/AuthCard";
import { LoginForm } from "@/components/views/auth/LoginForm";
import { Container } from "@/components/shared/Container";
---

<Layout title="Login - Daily Stoic">
  <main class="flex items-center flex-1 w-full">
    <Container className="flex flex-col gap-4 text-center">
      <p class="font-cinzel text-xl">Your Stoic journey awaits.</p>
      <AuthCard client:load>
        <LoginForm client:load />
      </AuthCard>
    </Container>
  </main>
</Layout>
